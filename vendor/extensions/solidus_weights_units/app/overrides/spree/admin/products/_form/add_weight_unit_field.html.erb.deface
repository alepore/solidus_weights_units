<!-- insert_after 'div#shipping_specs' -->
<div id="weight_unit">
  <%= f.field_container :weight_unit do %>
    <%= f.label :weight_unit, Spree::Variant.human_attribute_name(:weight_unit) %>
    <%= f.field_hint :weight_unit %>
    <%= f.select(:weight_unit, Spree::Variant::WEIGHT_UNITS,
                               { include_blank: Spree.t('match_choices.none') },
                               { class: 'select2' }) %>
    <%= f.error_message_on :shipping_category %>
  <% end %>
</div>
